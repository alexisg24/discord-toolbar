{
    "name": "Discord ToolBar",
    "version": "1.0",
    "description": "Discord ToolBar for chrome",
    "manifest_version": 2,
    "permissions": [
      "tabs",
      "activeTab"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://discord.com/*"
        ],
        "js": [
          "main.js"
        ]
      }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
  }
  